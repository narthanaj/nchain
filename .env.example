# Example environment variables for blockchain node
# Copy this to .env and modify as needed

# Configuration file path
BLOCKCHAIN_CONFIG=config/default.toml

# Data directory
BLOCKCHAIN_DATA_DIR=./data

# Log level (trace, debug, info, warn, error)
RUST_LOG=info

# Database URL
DATABASE_URL=sqlite:./data/blockchain.db

# API Configuration
API_HOST=127.0.0.1
API_PORT=8080
API_CORS_ENABLED=true

# Network Configuration
P2P_PORT=9000
P2P_ENABLED=false

# Mining Configuration
MINING_ENABLED=false
MINING_DIFFICULTY=4
MINING_BLOCK_REWARD=12.5

# Smart Contracts
CONTRACTS_ENABLED=true
CONTRACTS_MAX_MEMORY_MB=16
CONTRACTS_GAS_LIMIT=1000000

# Security
PRIVATE_KEY_ENCRYPTION_ENABLED=false

# Development flags
DEVELOPMENT_MODE=false
DEBUG_ENABLED=false